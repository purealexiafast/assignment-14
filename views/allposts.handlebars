<div>
    {{#each posts as |post|}}

    <div>
        <a href="/post/{{post.id}}">
            <h3>
                {{post.title}}
            </h3>
        </a>

        <p>
            {{post.body}}
        </p>

        <p>
            This post was created by {{post.user.username}} on {{post.createdAt}}.
        </p>
    </div>

    {{/each}}

</div>